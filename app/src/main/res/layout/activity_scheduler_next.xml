<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kunal.studymanager.SchedulerNext">

    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Study Schedule Days"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextSub1"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:text="sub1"
                    android:textSize="25sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:maxLines="1"
                    android:id="@+id/TextSub2"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:text="sub2"
                    android:textSize="25sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:maxLines="1"
                    android:id="@+id/TextSub3"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:text="sub3"
                    android:textSize="25sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:maxLines="1"
                    android:id="@+id/TextSub4"
                    android:visibility="gone"
                    android:text="sub4"
                    android:textSize="25sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:clickable="false"
                    android:visibility="gone"
                    android:id="@+id/sub1"
                    android:text="30"
                    android:textSize="30sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <Button
                    android:clickable="false"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/sub2"
                    android:text="30"
                    android:textSize="30sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <Button
                    android:visibility="gone"
                    android:clickable="false"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/sub3"
                    android:text="30"
                    android:textSize="30sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <Button
                    android:visibility="gone"
                    android:clickable="false"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/sub4"
                    android:text="30"
                    android:textSize="30sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />


            </LinearLayout>
        </LinearLayout>

        <!-- 2nd line -->
        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:maxLines="1"
                    android:id="@+id/TextSub5"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:text="sub5"
                    android:textSize="25sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:maxLines="1"
                    android:id="@+id/TextSub6"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:text="sub6"
                    android:textSize="25sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:maxLines="1"
                    android:id="@+id/TextSub7"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:text="sub7"
                    android:textSize="25sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:maxLines="1"
                    android:id="@+id/TextSub8"
                    android:visibility="gone"
                    android:text="sub8"
                    android:textSize="25sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:visibility="gone"
                    android:clickable="false"
                    android:id="@+id/sub5"
                    android:text="30"
                    android:textSize="30sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <Button
                    android:visibility="gone"
                    android:clickable="false"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/sub6"
                    android:text="30"
                    android:textSize="30sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <Button
                    android:visibility="gone"
                    android:clickable="false"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/sub7"
                    android:text="30"
                    android:textSize="30sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <Button
                    android:visibility="gone"
                    android:clickable="false"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/sub8"
                    android:text="30"
                    android:textSize="30sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:onClick="addSchedule"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add My Schedule"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

</RelativeLayout>
